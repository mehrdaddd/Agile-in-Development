<script>
    $("#ratingForm").submit(function (event) {
        event.preventDefault();
        var user_id = <%  if (locals.session.userid != null) {%> <%=locals.session.userid;%> <%  } else { %>  -1 <% }%>;
        if(user_id == -1) {
            alert('Please login first.');
            return false;
        }
        $.ajax({
            url: 'saveRating',
            type: 'post',
            dataType: 'json',
            data: {
                Rating : $("#rating_message_txt").val(),
                User_id : user_id,
                Stars : $("#ratings-hidden").val()
            },
            success: function(data) {
                if(data.rated == true) {
                    $("#averageRating").html(data.averageRating);
                    alert(data.message);
                }else {
                    alert(data.error);
                }
            },
            fail: function (err) {
                alert( err );
            }
        });
    });
</script>